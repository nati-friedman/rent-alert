{
  "manifest_version": 3,
  "name": "Rent Alert",
  "version": "1.0",
  "description": "Help you search for an apartment on facebook",
  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "64": "images/icon64.png",
    "128": "images/icon128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/groups/*"],
      "js": ["scripts/content.js"],
      "css": ["css/styles.css"]
    }
  ]
}