{
  "manifest_version": 3,
  "name": "Rent Alert",
  "version": "1.0",
  "description": "Help you search for an apartment on facebook",
  "permissions": ["tabs", "notifications", "storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "images/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/groups/*"],
      "js": ["scripts/content.js"],
      "css": ["css/styles.css"]
    }
  ]
}