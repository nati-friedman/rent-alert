{
  "manifest_version": 3,
  "name": "Rent Alert",
  "version": "1.0",
  "description": "Help you search for an apartment on facebook",
  "permissions": ["tabs", "notifications", "storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/groups/*"],
      "js": ["scripts/content.js"],
      "css": ["css/styles.css"]
    }
  ]
}